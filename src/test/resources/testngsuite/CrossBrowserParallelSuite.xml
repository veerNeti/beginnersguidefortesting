<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SeleniumSuite" parallel="tests" thread-count="2">

    <test verbose="5" preserve-order="true" name="chrome-PositiveLoginTestScenario">
        <parameter name="browser" value="chrome"/>
        <parameter name="username" value="tomsmith"/>
        <parameter name="password" value="SuperSecretPassword!"/>
        <parameter name="url" value="https://the-internet.herokuapp.com/login"/>
        <parameter name="expectedmessage" value="You logged into a secure area!"/>
        <parameter name="h2" value="Secure Area"/>
        <classes>
            <class name="com.guide.beginners.testng.theinternet.frameworktestng.testcases.PositiveLoginTestScenario"/>
        </classes>
    </test>


